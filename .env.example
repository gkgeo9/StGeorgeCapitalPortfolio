# =============================================================================
# St. George Capital Portfolio - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Alpha Vantage API
# -----------------------------------------------------------------------------
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Optional: Set to 'true' for paid tier (75 req/min instead of 5 req/min)
# ALPHA_VANTAGE_PAID_TIER=true

# -----------------------------------------------------------------------------
# REQUIRED: Authentication (for admin access)
# -----------------------------------------------------------------------------
# Admin username for login
ADMIN_USERNAME=admin

# Bcrypt password hash for admin password
# Generate with: python -c "import bcrypt; print(bcrypt.hashpw(b'YOUR_PASSWORD', bcrypt.gensalt()).decode())"
# Example: For password "changeme", run the command above and paste the result
ADMIN_PASSWORD_HASH=$2b$12$YOUR_BCRYPT_HASH_HERE

# -----------------------------------------------------------------------------
# OPTIONAL: Database Configuration
# -----------------------------------------------------------------------------
# SQLite (default for development):
DATABASE_URL=sqlite:///portfolio.db

# PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# -----------------------------------------------------------------------------
# OPTIONAL: FRED API (for Sharpe ratio risk-free rate)
# -----------------------------------------------------------------------------
# Get your free API key at: https://fred.stlouisfed.org/docs/api/api_key.html
# If not set, falls back to 4.5% default rate
FRED_API_KEY=your_fred_api_key_here

# -----------------------------------------------------------------------------
# OPTIONAL: Flask Configuration
# -----------------------------------------------------------------------------
# Set to 'development' for debug mode, 'production' for production
FLASK_ENV=development

# Secret key for session encryption (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Server port (default: 5012)
PORT=5012

# Cooldown between manual refreshes in seconds (default: 60)
MANUAL_REFRESH_COOLDOWN=60
