# Portfolio Manager Configuration
# Copy this file to .env and fill in your values

# Flask Settings
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
PORT=5012

# Database Settings
# Default is local SQLite: sqlite:///portfolio.db
DATABASE_URL=sqlite:///portfolio.db

# Price Provider Selection:
# - 'auto': Use Alpha Vantage if API key exists, else yfinance
# - 'yfinance': Force yfinance (no API key needed, but inconsistent)
# - 'alphavantage': Force Alpha Vantage (requires API key)
PRICE_PROVIDER=auto

# API Keys
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=YOUR_API_KEY_HERE

# Cooldown between manual refreshes (seconds)
MANUAL_REFRESH_COOLDOWN=60

# Portfolio Settings
PORTFOLIO_STOCKS=NVDA,MSFT,AAPL,JPM,UNH
INITIAL_CASH=100000
SHARES_PER_TRADE=100
